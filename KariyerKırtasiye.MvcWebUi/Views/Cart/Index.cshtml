@model  KariyerKırtasiye.MvcWebUi.Models.Cart
@{
    ViewBag.Title = "Index";


    <header>
        <section class="top-bar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-sm-4">
                        <a href="index.html"
                           class="navbar-brand"
                           style="
            font-weight: bold;
            color: rgb(238, 5, 5);
            font-size: 1.1rem;
          ">Kariyer Kitap Kırtasiye</a>
                    </div>
                    <div class="col-lg-4 col-sm-8">
                        <form>
                            <div class="input-group">
                                <input type="text"
                                       class="form-Control"
                                       placeholder="Ürün Ara" />
                                <button class="btn btn-primary">






                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="order-lg-last col-lg-5 float-right">
                        <div class="text-end">

                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <nav class="navbar navbar-dark bg-danger navbar-expand-lg">
            <div class="container">
                <button type="button"
                        class="navbar-toggler border"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbar_main">
                    <span class="navbar-toggler-icon"> </span>
                </button>
                <div class="collapse navbar-collapse" id="navbar_main">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="" class="nav-link ps-0">Kariyer Kırtasiye</a>
                        </li>
                        <li class="nav-item">
                            <a href="/" class="nav-link">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/List" class="nav-link">Ürünler</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Hakkımızda</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
}

<div class="container pb-5">
    <div class="row">

        <div class="col-md-6">
            <h2>Alışveriş Sepeti</h2>
            <hr />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Quantity</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Sub Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartLines)
                    {


                        <tr>
                            <td>
                                <img src="~/Upload/@item.Product.Image" width="50" />
                            </td>
                            <td>@item.Quantity</td>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Price</td>
                            <td>@((item.Product.Price * item.Quantity).ToString("c"))</td>

                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4">
                        </td>
                        <td>
                            @Model.Total().ToString("c")
                        </td>
                    </tr>
                </tfoot>






            </table>

        </div>
    </div>
</div>









