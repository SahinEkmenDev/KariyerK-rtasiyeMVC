@using KariyerKırtasiye.MvcWebUi.Models;

@model  IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}

<header>
    <section class="top-bar">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-sm-4">
                    <a href="index.html"
                       class="navbar-brand"
                       style="
            font-weight: bold;
            color: rgb(238, 5, 5);
            font-size: 1.1rem;
          ">Kariyer Kitap kırtasiye</a>
                </div>
                <div class="col-lg-4 col-sm-8">
                    <form>
                        <div class="input-group">
                            <input type="text"
                                   class="form-Control"
                                   placeholder="Ürün Ara" />
                            <button class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="order-lg-last col-lg-5">
                    <div class="text-end">

                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </section>
    <nav class="navbar navbar-dark bg-danger navbar-expand-lg">
        <div class="container">
            <button type="button"
                    class="navbar-toggler border"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbar_main">
                <span class="navbar-toggler-icon"> </span>
            </button>
            <div class="collapse navbar-collapse" id="navbar_main">
                <ul class="navbar-nav">
                    <div class="collapse navbar-collapse" id="navbar_main">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="" class="nav-link ps-0">Kariyer Kırtasiye</a>
                            </li>
                            <li class="nav-item">
                                <a href="/" class="nav-link">Anasayfa</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Home/List" class="nav-link">Ürünler</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">Hakkımızda</a>
                            </li>


                        </ul>
                    </div>

                  
                </ul>
            </div>
        </div>
    </nav>
</header>
<section class="pt-3 slider">
    <div class="container">
        <main class="card">
            <div class="row">
                <aside class="d-none d-lg-block col-lg-5">
                    <nav class="nav nav-pills flex-nowrap flex-column overflow-auto slider__nav">
                        @Html.Action("GetCategories", "Home")
                    </nav> 
                </aside>
            </div>
        </main>
    </div>





</section>

<div class="container">
    <header>
        <h3 class="mb-md-3 mb-0" >Ürünler</h3>
    </header>
    <div class="row">
        @if (Model.Count() == 0)
        {
            <div class="alert alert-warning" role="alert">
                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                Bu kategoride bir ürün bulunamadı.

            </div>

        }
        else
        {
    <div class="alert alert-warning" role="alert">
        <i class="fa fa-check-square" aria-hidden="true"></i>
        <strong> @Model.Count() adet</strong>  ürün bulundu.


    </div>
        }

        @Html.Partial("_ProductList", Model)
    </div>

</div>

