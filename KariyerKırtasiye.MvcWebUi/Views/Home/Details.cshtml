@using KariyerKırtasiye.MvcWebUi.Entity
@model  Product
@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/bootstrap.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css"
          integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <title>product-details</title>
</head>

<body class="bg-light">
    <header>
        <section class="top-bar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-sm-4">
                        <a href="index.html"
                           class="navbar-brand"
                           style="
                  font-weight: bold;
                  color: rgb(238, 5, 5);
                  font-size: 1.1rem;
                ">Kariyer Kitap Kırtasiye</a>
                    </div>
                    <div class="col-lg-4 col-sm-8">
                        <form>
                            <div class="input-group">
                                <input type="text"
                                       class="form-Control"
                                       placeholder="Ürün Ara" />
                                <button class="btn btn-primary">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="order-lg-last col-lg-5 float-right">
                        <div class="text-end">

                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <nav class="navbar navbar-dark bg-danger navbar-expand-lg">
            <div class="container">
                <button type="button"
                        class="navbar-toggler border"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbar_main">
                    <span class="navbar-toggler-icon"> </span>
                </button>
                <div class="collapse navbar-collapse" id="navbar_main">
                    <ul class="navbar-nav">
                        <div class="collapse navbar-collapse" id="navbar_main">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a href="" class="nav-link ps-0">Kariyer Kırtasiye</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/" class="nav-link">Anasayfa</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Home/List" class="nav-link">Ürünler</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">Hakkımızda</a>
                                </li>


                            </ul>
                        </div>


                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container pb-5">
        <div class="row">
            <div class="col-md-6">
                <img src="~/Upload/@Model.Image" class="img-responsive" alt="" style="width: 300px; height: 300px;" />
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <h1>@Model.Name</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">

                        @if (Model.IsApproved)
                        {
                            <span class="badge badge-success" style="background-color: #28a745;">Stokta Var</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Stokta yok</span>
                        }

                        <span class="product-number">#45887</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div id="description">
                            @Model.Description
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <span class="label label-success">68</span>
                        </div>

                        <div class="col-md-4">write a review</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h4 id="product-price">@Model.Price  <i class="fa fa-try" aria-hidden="true"></i></h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">

                        @using (Html.BeginForm("AddToCart","Cart"))
                        {
                            @Html.HiddenFor(i=>i.Id)
                            
                            <button type="submit" class="btn btn-success">
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                            Sepete Ekle
                           </button >
                        
                         }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- slider -->

    <footer class="py-4 bg-primary mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Email" />
                            <button class="btn btn-outline-warning">Abone Ol</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-8">
                    <nav class="text-center text-md-end">
                        <a href="#" class="btn btn-icon btn-outline-warning">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-icon btn-outline-warning">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-icon btn-outline-warning">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-icon btn-outline-warning">
                            <i class="fab fa-youtube"></i>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </footer>


    <script src="../node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
</body>
</html>


