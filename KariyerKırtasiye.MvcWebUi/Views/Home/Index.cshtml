@using KariyerKırtasiye.MvcWebUi.Models;
                
@model  IEnumerable<ProductModel>
@{
    ViewBag.Title = "Index";
}

<header>
    <section class="top-bar">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-sm-4">
                    <a href="index.html"
                       class="navbar-brand"
                       style="
            font-weight: bold;
            color: rgb(238, 5, 5);
            font-size: 1.1rem;
          ">Kariyer Kitap Kırtasiye</a>
                </div>
                <div class="col-lg-4 col-sm-8">
                    <form>
                        <div class="input-group">
                            <input type="text"
                                   class="form-Control"
                                   placeholder="Ürün Ara" />
                            <button class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="order-lg-last col-lg-5 float-right">
                    <div class="text-end">
                       
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </section>
    <nav class="navbar navbar-dark bg-danger navbar-expand-lg">
        <div class="container">
            <button type="button"
                    class="navbar-toggler border"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbar_main">
                <span class="navbar-toggler-icon"> </span>
            </button>
            <div class="collapse navbar-collapse" id="navbar_main">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="" class="nav-link ps-0">Kariyer Kırtasiye</a>
                    </li>
                    <li class="nav-item">
                        <a href="/" class="nav-link">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Home/List" class="nav-link">Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Hakkımızda</a>
                    </li>

                   
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- slider -->

<section class="pt-3 slider">
    <div class="container">
        <main class="card">
            <div class="row">
                <aside class="d-none d-lg-block col-lg-3">
                    <nav class="nav nav-pills flex-nowrap flex-column overflow-auto slider__nav">
                        <a href="#" class="nav-link active">Kitap</a>
                        <a href="#" class="nav-link">Kırtasiye</a>
                        <a href="#" class="nav-link">Çanta</a>
                        <a href="#" class="nav-link">Oyuncak</a>
                        <a href="#" class="nav-link">Kurumsal Deneme </a>
                        <a href="#" class="nav-link">Ofis Eşyaları</a>
                    </nav>
                </aside>
                <div class="col-lg-9">
                    <div id="slider" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button"
                                    data-bs-target="#carouselExampleIndicators"
                                    data-bs-slide-to="0"
                                    class="active"
                                    aria-current="true"
                                    aria-label="Slide 1"
                                    style="background-color: rgb(238, 5, 5)"></button>
                            <button type="button"
                                    data-bs-target="#carouselExampleIndicators"
                                    data-bs-slide-to="1"
                                    aria-label="Slide 2"
                                    style="background-color: rgb(238, 5, 5)"></button>
                            <button type="button"
                                    data-bs-target="#carouselExampleIndicators"
                                    data-bs-slide-to="2"
                                    aria-label="Slide 3"
                                    style="background-color: rgb(238, 5, 5)"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/bs-starter/public/img/Ana Sayfa.jpeg" alt="" class="d-block w-100" />
                            </div>
                            
                        </div>
                        <button class="carousel-control-prev"
                                type="button"
                                data-bs-target="#slider"
                                data-bs-slide="prev"
                                style="background-color: rgb(238, 5, 5)">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next"
                                type="button"
                                data-bs-target="#slider"
                                data-bs-slide="next"
                                style="background-color: rgb(238, 5, 5)">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</section>
<section class="pt-3">
    
    <div class="container">
        <header>
            <h3 class="mb-md-3 mb-0">Son Eklenenler</h3>
        </header>
        
        <div class="row">
          @Html.Partial("_ProductList",Model)
        </div>
        
    </div>
</section>
<footer class="py-4 bg-primary">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Email" />
                        <button class="btn btn-outline-warning">Abone Ol</button>
                    </div>
                </form>
            </div>
            <div class="col-md-8">
                <nav class="text-center text-md-end">
                    <a href="#" class="btn btn-icon btn-outline-warning">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="btn btn-icon btn-outline-warning">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="btn btn-icon btn-outline-warning">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="btn btn-icon btn-outline-warning">
                        <i class="fab fa-youtube"></i>
                    </a>
                </nav>
            </div>
            <div class="col-md-12"></div>
        </div>
    </div>
</footer>

